{
  "name": "Collect Pantheon Commit Messages",
  "version": "1.0",
  "description": "Copies all the commit messages and adds them as an unordered list into the Deploy Log Message text box.",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/lightning-16.png",
      "32": "images/lightning-32.png",
      "48": "images/lightning-48.png",
      "128": "images/lightning-128.png"
    }
  },
  "icons": {
    "16": "images/lightning-16.png",
    "32": "images/lightning-32.png",
    "48": "images/lightning-48.png",
    "128": "images/lightning-128.png"
  },
  "manifest_version": 2
}
